# --- Google Sheets & Service Account ---
# ID вашей Google Таблицы (из URL: docs.google.com/spreadsheets/d/THIS_IS_THE_ID/edit)
SHEET_ID="ВАШ_ДЛИННЫЙ_ID_ТАБЛИЦЫ"
# Путь к JSON-файлу сервисного аккаунта Google, который вы скачали
SERVICE_ACCOUNT_JSON="credentials.json"
# Имя листа с ключевыми словами
KEYWORDS_SHEET="Keywords"
# Имя листа для записи результатов
RESULTS_SHEET="Results"

# --- YouTube API ---
# Ваши API ключи от YouTube, через запятую. НЕ используйте кавычки.
YT_API_KEYS="AIzaSyA...,AIzaSyB...,AIzaSyC..."

# --- Parser Settings ---
# Сколько результатов искать на один ключевик
NUM_RESULTS=10
# Сколько страниц результатов обрабатывать (1 страница = до 50 видео)
MAX_PAGES=1
# Двухбуквенный код региона для поиска (напр., US, RU, GB)
REGION="US"
# Через сколько обработанных ключевиков принудительно сохранять результаты
BATCH_SIZE=50
# Имя локального CSV файла для сохранения результатов
OUTPUT_CSV="yt_results.csv"
